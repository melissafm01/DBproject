<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BASE DE DATOS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Campo Código -->
        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código"
            android:inputType="number"
            android:textSize="16sp"
            android:backgroundTint="#808080"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Campo Ciudad -->
        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad"
            android:textSize="16sp"
            android:backgroundTint="#808080"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Botones Ciudad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnGuardarCiudad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="Guardar"
                android:textColor="#ffffff"
                android:backgroundTint="#ADADAD"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnActualizarCiudad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="Actualizar"
                android:textColor="#ffffff"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEliminarCiudad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="Eliminar"
                android:textColor="#ffffff"
                android:backgroundTint="#C70000" />
        </LinearLayout>

        <!-- Campo Departamento -->
        <EditText
            android:id="@+id/etDepartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departamento"
            android:textSize="16sp"
            android:backgroundTint="#808080"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Botones Departamento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarDepartamento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:backgroundTint="#ADADAD"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnActualizarDepartamento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actualizar"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnEliminarDepartamento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="Eliminar"
                android:textColor="#ffffff"
                android:backgroundTint="#C70000" />
        </LinearLayout>

        <!-- Resultado -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="260dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium" />

        <!-- Botón Ver Actividades -->
        <Button
            android:id="@+id/btnVerActividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Actividades"
            android:layout_marginTop="24dp"
            android:backgroundTint="#03683E"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
